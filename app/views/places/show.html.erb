<div class="container">
  <h1> <%= @place.city %></h1>
  <% if @place.img_url %>
    <%= image_tag(@place.img_url, :size => "304x236") %>
  <% end %>
  <% if @place.image.attached? %>
  <!-- @post.image.present? will always return true, use attached? to check presence -->
    <p>
      <%= image_tag(@place.image, :size => "304x236") %>
    </p>
  <% end %>
</div>

<div>
<% @place.activities.each do |activity| %>
   <%= link_to activity.name, activity_path(activity.id) %><br><br>
<% end %>
</div>



<div>
  <%= link_to "Edit this place", edit_place_path %>
</div>

<div>
  <%= button_to "Delete this place", @place, method: "delete" %>
</div>

<div>
  <%= link_to "All places", places_path %>
</div>
