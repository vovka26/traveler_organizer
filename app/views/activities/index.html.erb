<h1>Activities</h1>
<div class="container">
  <h2>Check out all the places you can visit!</h2>
</div>


<div class="grid-container">
<% @activities.each do |activity| %>
    <% if activity.image.attached? %>
      <div class="category_images">
        <%= link_to activity.name, activity_path(activity.id) %>
        <a href="<%=activity_path(activity)%>" ><%= image_tag(activity.image, :size => "304x236") %></a></div>
    <% end %>

<% end %>
</div>
