<%= form_for @activity do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%# categories checkboxes  %>
  <%= f.label :categories, "Categories:" %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |box| %>
      <%= box.check_box %>
      <%= box.label %>
  <% end %><br>

  <%# create a new place  %>
  <%= f.fields_for :places, @activity.places.build do |place_builder| %>
    <%= place_builder.label :city, "City:" %>
    <%= place_builder.text_field :city %>
  <% end %><br>
  <%# adds image  %>
  <%= f.label :img_url, "Image URL:" %>
  <%= f.text_field :img_url %><br>
  <%= f.submit %>
<% end %>
