<h1> <%= @activity.name %></h1>
<div>
  <% if @activity.img_url %>
    <%= image_tag(@activity.img_url) %>
  <% end %>
</div>

<div>
  <% @activity.categories.each do |category| %>
      <p><%= link_to category.name, category_path(category.id) %></p>
  <% end %>
</div>

<div>
  <%= link_to "Edit this activity", edit_activity_path %>
</div>

<div>
  <%= link_to "Delete activity", @activity, method: "DELETE", data: {confirm: "Delete this activity?"} %>
</div>

<div>
  <%= link_to "All activities", activities_path %>
</div>
