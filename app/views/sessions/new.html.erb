<h1 class="col-sm-offset-2 col-sm-10">Login</h1>
<% if flash.notice %>
  <h3 class="col-sm-offset-2 col-sm-10"><%= flash.notice %></h3>
<% end %>
<%= form_tag "/login", class: "form-horizontal" do %>
  <div class="form-group">
  <br><br>  <%= label :username, "Username", class: "control-label col-sm-2" %>
      <div class="col-sm-8">
        <%= text_field_tag :username, "", class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= label :password, "Password", class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-7">
      <%= submit_tag "Login", class: "btn btn-default"%>
    </div>
  </div>
<% end %>
